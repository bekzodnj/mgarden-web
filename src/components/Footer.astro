---
const today = new Date();
import { Icon } from "astro-icon/components";
---

<footer class="flex flex-col items-center text-center gap-10 py-10 px-6">
  <h2 class="text-3xl sm:text-6xl">MAVERAN GARDEN</h2>
  <p>
    &copy; {today.getFullYear()} Maveran Garden. All rights reserved.
    <span
      >Developed by <a href="https://bekzod.dev/" class="underline"
        >bekzod.dev</a
      ></span
    >
  </p>

  <div class="flex items-center gap-6 text-5xl">
    <a
      href="https://t.me/maveran_garden"
      target="_blank"
      class="border-1 p-1 border-black rounded-full shadow-card hover:shadow-hover transition"
    >
      <Icon name="telegram" class="" />
    </a>

    <a
      href="https://www.instagram.com/maveran_garden_"
      target="_blank"
      class="bg-slate-100 border-1 p-1 border-black rounded-full shadow-card hover:shadow-hover transition"
    >
      <Icon name="instagram-with-circle" />
    </a>
  </div>
</footer>

<style>
  footer {
    background-color: #f9f9f9;
  }

  h2 {
    color: #f9f9f9;
    text-transform: capitalize;
    background: linear-gradient(
      to right,
      #141e30,
      #243b55
    ); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-stroke: 3px transparent;
    letter-spacing: 2px;
  }
</style>
