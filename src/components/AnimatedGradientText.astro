---
const { text = "Экологически чистые овощи" } = Astro.props;
---

<span class="gradient-text text-4xl sm:text-6xl">
  {text}
</span>

<style>
  .gradient-text {
    font-size: 4rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    position: relative;
    display: inline-block;

    /* More natural but vivid gradient */
    background: linear-gradient(
      -45deg,
      #1d5d2a,
      #57b956,
      #b5de5a,
      #57b956,
      #2f7a32
    );
    background-size: 400% 400%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientShift 10s ease-in-out infinite;
  }

  /* Soft glow background for better readability */
  .gradient-text::before {
    content: "";
    position: absolute;
    inset: -0.15em;
    background: radial-gradient(
      circle at center,
      rgba(255, 255, 255, 0.8) 0%,
      rgba(255, 255, 255, 0) 70%
    );
    z-index: -1;
    border-radius: 0.3em;
    filter: blur(12px);
  }

  @keyframes gradientShift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @media (max-width: 640px) {
    .gradient-text {
      font-size: 2.25rem;
    }
  }
</style>
